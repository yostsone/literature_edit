{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true // Enable isolated module checks (useful for Vite)
  },
  "include": ["src"],        // Include TypeScript files inside the `src` directory
  "exclude": ["node_modules"] // Exclude libraries
}